<p id="notice"><%= notice %></p>

<h1>Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Sex</th>
      <th>Group</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.name %></td>
        <td><%= staff.age %></td>
        <td><%= staff.sex %></td>
        <td><%= staff.group_id %></td>
        <td><%= staff.password %></td>
        <td><%= link_to 'Show', admin_staff_url(staff.id) %></td>
        <td><%= link_to 'Edit', edit_admin_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', admin_staff_url(staff.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

